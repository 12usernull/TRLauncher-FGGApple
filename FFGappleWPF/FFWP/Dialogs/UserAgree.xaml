<ui:ContentDialog  xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" x:Name="UsrAg"
      x:Class="FFWP.Dialogs.UserAgree"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FFWP.Dialogs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserAgree" Foreground="White" Background="Black">

    <Grid>
        <TextBlock x:Name="Agreement" HorizontalAlignment="Center" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="197" Width="484" FontSize="14" Margin="0,10,0,0"/>
        <Button x:Name="agree" Content="Button" Margin="0,219,0,0" VerticalAlignment="Top" Width="242" Click="agree_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FF5D17DE" Offset="0"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="disagree" Content="Button" Margin="247,219,0,0" VerticalAlignment="Top" Width="242" Background="#FF383535" Foreground="White" Click="disagree_Click"/>

    </Grid>
</ui:ContentDialog>
